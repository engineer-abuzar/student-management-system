<script>
    function nameValidation(input) {
        // Remove any non-alphabetic characters (including numbers)
        input.value = input.value.replace(/[^a-zA-Z ]/g, '');
    }

    function mobileNumberValidation(input) {
        // Remove any non-numeric characters
        input.value = input.value.replace(/[^0-9]/g, '');
    }

    function aadharValidation(input) {
        // Remove any non-numeric characters
        input.value = input.value.replace(/[^0-9]/g, '');

        // Ensure the input doesn't exceed 12 digits
        if (input.value.length > 12) {
            input.value = input.value.slice(0, 12); // Limit to 12 digits
        }
    }
    function pincodeValidation(input) {
        // Remove any non-numeric characters
        input.value = input.value.replace(/[^0-9]/g, '');

        // Ensure the input doesn't exceed 6 digits
        if (input.value.length > 11) {
            input.value = input.value.slice(0, 6); // Limit to 6 digits
        }
    }
     

    // Validation for father's occupation (only alphabetic characters and spaces)
    function occupationValidation(input) {
        // Allow only alphabetic characters and spaces
        input.value = input.value.replace(/[^a-zA-Z ]/g, '');
    }
     // Validation for Marks/Grade (Allows letters and numbers)
     function marksGradeValidation(input) {
        // Allow only alphanumeric characters (e.g., A, B, 95, etc.)
        input.value = input.value.replace(/[^a-zA-Z0-9]/g, '');
    }

    // Validation for Year fields (Allows only 4 digits for year)
    function yearValidation(input) {
        // Allow only numbers and ensure it has exactly 4 digits
        input.value = input.value.replace(/[^0-9]/g, '');
        if (input.value.length > 4) {
            input.value = input.value.slice(0, 4); // Limit to 4 digits
        }
    }

    // Validation for Board/University fields (Only alphabetic characters and spaces allowed)
    function boardUniversityValidation(input) {
