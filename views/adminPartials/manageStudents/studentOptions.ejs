    opacity: 0.9;
}

/* Tab Content Styling */
.tab-content {
    display: none; /* Hide all initially */
    width: 100%;

    padding: 15px;
    background: #f8f9fa;
    border-radius: 10px;
  
    text-align: center;

}

/* Show Active Tab */
.tab-content.active {
    display: block;
}

/* Responsive Design */
@media (max-width: 600px) {
    .student-actions {
        flex-direction: column;
    }
}
</style>
<!-- tab navigation -->
<script>
function showTab(tabId) {
    // Hide all tabs
    document.querySelectorAll('.tab-content').forEach(tab => {
        tab.classList.remove('active');
    });


    document.getElementById(tabId).classList.add('active');
}


document.addEventListener("DOMContentLoaded", () => showTab('add-student'));
