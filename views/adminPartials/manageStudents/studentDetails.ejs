<div class="student-details-container">
    <h2>Student Details</h2>
    <table class="student-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>ID</th>
                <th>Roll No</th>
                <th>Name</th>
                <th>Course</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% result.forEach(student => { %>
                <tr>
                    <td><img alt="Student"></td>
                    <td><%= student.id %></td>
                    <td><%= student.rollNo %></td>
                    <td><%= student.firstName %></td>
                    <td><%= student.programme %></td>
                    <td><%= student.email %></td>
                    <td><%= student.mobileNumber %></td>
                    <td><button class="view-btn" onclick="viewStudent('<%= student.id %>')">View</button></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
</div>

<style>
    .student-details-container {
        width: 95%;
        max-width: 1000px;
        margin: auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .student-details-container h2 {
        margin-bottom: 15px;
        color: #333;
    }

    .student-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 16px;
    }

    .student-table th, .student-table td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
    }

    .student-table thead {
        background: #007bff;
        color: white;
    }

    .student-table tbody tr:nth-child(even) {
        background: #f8f9fa;
    }

    .student-table tbody tr:hover {
        background: #dfe6e9;
        cursor: pointer;
    }

    .student-table img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
    }

    .view-btn {
        background: #28a745;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

    .view-btn:hover {
        background: #218838;
    }
</style>
